#!/usr/bin/env bash
# Install Nginx and configure the root page for Task 1

# Update package list
apt-get update -y

# Install Nginx
apt-get install -y nginx

# Ensure /var/www/html exists
mkdir -p /var/www/html

# Set the correct content for the root page
echo "Holberton School for the win!" > /var/www/html/index.html

# Make sure Nginx root points to /var/www/html
sed -i 's|root .*;|root /var/www/html;|' /etc/nginx/sites-enabled/default

# Restart Nginx without systemctl
service nginx restart

